{
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 120,
	"alignInGroups": "always",
	"plugins": [
		"@huggingface/prettier-plugin-vertical-align",
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
